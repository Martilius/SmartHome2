<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/srlOutside"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:background="@color/pawelsRoomBackground"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.OutsideFragment">

    <com.google.android.material.chip.Chip
        android:id="@+id/chipAutomaticLightOutside"
        style="@style/Widget.MaterialComponents.Chip.Action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:checkable="true"
        app:chipStrokeWidth="1dp"
        android:text="Automatic Light"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvAltana"
        style="@style/Widget.MaterialComponents.CardView"
        android:backgroundTint="@color/lightestBrown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chipAutomaticLightOutside">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/headerAdditionalLightAltana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lighterBrown"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivAdditionalLightCardViewAltana"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/white"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ledstriptest"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Altana"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ivAdditionalLightCardViewAltana"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/btAdditionalLightAltanaSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ToggleButton
                    android:id="@+id/btAdditionalLightCardViewExpanderAltana"
                    android:layout_width="35dp"
                    android:layout_height="25dp"

                    android:background="@drawable/toggle_button"
                    android:checked="false"
                    android:textOff=""
                    android:textOn=""

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/contentAdditionalLightCardViewAltana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightestBrown"
                android:visibility="gone"
                android:paddingBottom="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/headerAdditionalLightAltana"

                tools:visibility="visible">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="White"
                    app:layout_constraintLeft_toLeftOf="@id/additionalLightWhiteButtonAltana"
                    app:layout_constraintRight_toRightOf="@id/additionalLightWhiteButtonAltana"
                    app:layout_constraintTop_toBottomOf="@id/additionalLightWhiteButtonAltana" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Red"
                    app:layout_constraintLeft_toLeftOf="@id/additionalLightRedButtonAltana"
                    app:layout_constraintRight_toRightOf="@id/additionalLightRedButtonAltana"
                    app:layout_constraintTop_toBottomOf="@id/additionalLightRedButtonAltana" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Green"
                    app:layout_constraintLeft_toLeftOf="@id/additionalLightGreenButtonAltana"
                    app:layout_constraintRight_toRightOf="@id/additionalLightGreenButtonAltana"
                    app:layout_constraintTop_toBottomOf="@id/additionalLightGreenButtonAltana" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blue"
                    app:layout_constraintLeft_toLeftOf="@id/additionalLightBlueButtonAltana"
                    app:layout_constraintRight_toRightOf="@id/additionalLightBlueButtonAltana"
                    app:layout_constraintTop_toBottomOf="@id/additionalLightBlueButtonAltana" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Custom"
                    app:layout_constraintLeft_toLeftOf="@id/additionalLightCustomButtonAltana"
                    app:layout_constraintRight_toRightOf="@id/additionalLightCustomButtonAltana"
                    app:layout_constraintTop_toBottomOf="@id/additionalLightCustomButtonAltana" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/additionalLightWhiteButtonAltana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="#FFFFFF"
                    android:clickable="true"
                    android:focusable="true"
                    app:borderWidth="0dp"
                    app:fabSize="mini"
                    app:layout_constraintEnd_toStartOf="@+id/additionalLightCustomButtonAltana"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/additionalLightRedButtonAltana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FF0000"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="10dp"
                    app:borderWidth="0dp"
                    app:fabSize="mini"
                    app:layout_constraintEnd_toStartOf="@id/additionalLightGreenButtonAltana"
                    app:layout_constraintStart_toStartOf="@+id/additionalLightWhiteButtonAltana"
                    app:layout_constraintTop_toTopOf="@+id/textView3" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/additionalLightGreenButtonAltana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#00FF00"
                    android:layout_marginRight="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:borderWidth="0dp"
                    app:fabSize="mini"
                    app:layout_constraintEnd_toStartOf="@id/additionalLightBlueButtonAltana"
                    app:layout_constraintStart_toEndOf="@+id/additionalLightRedButtonAltana"
                    app:layout_constraintTop_toTopOf="@+id/additionalLightRedButtonAltana" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/additionalLightBlueButtonAltana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#0000FF"
                    android:clickable="true"
                    android:focusable="true"
                    app:borderWidth="0dp"
                    app:fabSize="mini"
                    app:layout_constraintEnd_toEndOf="@+id/additionalLightCustomButtonAltana"
                    app:layout_constraintStart_toEndOf="@+id/additionalLightGreenButtonAltana"
                    app:layout_constraintTop_toTopOf="@+id/additionalLightRedButtonAltana" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/additionalLightCustomButtonAltana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    app:borderWidth="0dp"
                    app:fabSize="mini"
                    app:layout_constraintBottom_toBottomOf="@id/additionalLightWhiteButtonAltana"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/additionalLightWhiteButtonAltana"
                    app:layout_constraintTop_toTopOf="@id/additionalLightWhiteButtonAltana" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btPickCustomColorPawelsRoomAltana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pick"

                    app:layout_constraintBottom_toTopOf="@+id/textView5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/additionalLightCustomButtonAltana"
                    app:layout_constraintTop_toTopOf="@+id/additionalLightCustomButtonAltana" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>