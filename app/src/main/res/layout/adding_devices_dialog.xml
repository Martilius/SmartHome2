<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/title"
        android:text="Add new Room"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

<LinearLayout
    android:id="@+id/linearLayoutAddDevice"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    app:layout_constraintTop_toBottomOf="@id/title"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent">
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputRoomMenuLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/textInputDeviceTypeMenuLayout"
        android:hint="Room"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <AutoCompleteTextView
            android:id="@+id/roomAutoCompleteTextView"
            android:inputType="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputDeviceTypeMenuLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/textInputRoomMenuLayout"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Device type"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <AutoCompleteTextView
            android:id="@+id/deviceTypeAutoCompleteTextView"
            android:inputType="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputDeviceAddName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        app:layout_constraintStart_toStartOf="@id/linearLayoutAddDevice"
        app:layout_constraintEnd_toEndOf="@id/linearLayoutAddDevice"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutAddDevice"
>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDeviceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="Device Name" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvNewDevice"
        android:layout_marginTop="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintTop_toBottomOf="@id/textInputDeviceAddName"
        app:layout_constraintStart_toStartOf="@id/textInputDeviceAddName"
        app:layout_constraintEnd_toEndOf="@id/textInputDeviceAddName"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="2"
        tools:listitem="@layout/item_add_device_info"/>

    <ProgressBar
        android:id="@+id/addDeviceProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/rvNewDevice"
        app:layout_constraintLeft_toLeftOf="@id/rvNewDevice"
        app:layout_constraintRight_toRightOf="@id/rvNewDevice"
        app:layout_constraintBottom_toBottomOf="@id/rvNewDevice"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btCancelAddDevice"
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/lighterBrown"
        app:layout_constraintTop_toBottomOf="@id/rvNewDevice"
        app:layout_constraintLeft_toLeftOf="@id/textInputDeviceAddName"
        app:layout_constraintRight_toLeftOf="@id/btAddDevice"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btAddDevice"
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/lighterBrown"

        app:layout_constraintTop_toBottomOf="@id/rvNewDevice"
        app:layout_constraintLeft_toRightOf="@id/btCancelAddDevice"
        app:layout_constraintRight_toRightOf="@id/textInputDeviceAddName"/>

</androidx.constraintlayout.widget.ConstraintLayout>