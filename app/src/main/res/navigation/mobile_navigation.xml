<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_login">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.martilius.smarthome.ui.fragments.PawelsRoomFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/pawels_room_fragment" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.martilius.smarthome.ui.fragments.SaloonFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_saloon" >
        <action
            android:id="@+id/action_nav_gallery_pop"
            app:destination="@+id/nav_home"
            app:popUpTo="@id/nav_home"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.martilius.smarthome.ui.fragments.OutsideFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_outside" />
    <fragment
        android:id="@+id/nav_login"
        android:name="com.martilius.smarthome.ui.fragments.LoginFragment"
        android:label="login_fragment"
        tools:layout="@layout/login_fragment" >
        <action
            android:id="@+id/action_loginFragment_to_nav_home"
            app:destination="@id/nav_home"
            app:popUpTo="@id/nav_login"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/nav_settings"
        android:name="com.martilius.smarthome.ui.fragments.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/settings_fragment" />
</navigation>