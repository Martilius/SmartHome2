<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/launchFragment">

    <fragment
        android:id="@+id/nav_pawels_room"
        android:name="com.martilius.smarthome.ui.fragments.PawelsRoomFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/pawels_room_fragment" >
        <action
            android:id="@+id/action_nav_pawels_room_to_nav_login"
            app:destination="@id/nav_login"
            app:popUpTo="@id/nav_pawels_room"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/nav_login"
        android:name="com.martilius.smarthome.ui.fragments.LoginFragment"
        android:label="login_fragment"
        tools:layout="@layout/login_fragment" >
        <action
            android:id="@+id/action_loginFragment_to_nav_home"
            app:destination="@id/nav_pawels_room"
            app:popUpTo="@id/nav_login"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/nav_settings"
        android:name="com.martilius.smarthome.ui.fragments.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/settings_fragment" />
    <fragment
        android:id="@+id/launchFragment"
        android:name="com.martilius.smarthome.ui.fragments.LaunchFragment"
        android:label="launch_fragment"
        tools:layout="@layout/launch_fragment" >
        <action
            android:id="@+id/action_launchFragment_to_nav_login"
            app:destination="@id/nav_login"
            app:popUpTo="@id/launchFragment"
            app:popUpToInclusive="true"
            />
        <action
            android:id="@+id/action_launchFragment_to_nav_pawels_room"
            app:destination="@id/nav_pawels_room"
            app:popUpTo="@id/launchFragment"
            app:popUpToInclusive="true"
            />
    </fragment>
</navigation>